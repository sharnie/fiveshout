<section id="content" class="wrapper-md animated fadeInUp">    
  <div class="container aside-xl">

    <%= devise_error_messages! %>

    <section class="m-b-lg">
      <header class="wrapper text-center">
        <strong>Forgot password?</strong>
      </header>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |form| %>
        <form action="index.html">
          <div class="list-group">
            <div class="list-group-item">
              <%= form.email_field :email, autocomplete: :off, autofocus: true, class: "form-control no-border", placeholder: "Email address" %>
            </div>
          </div>

          <%= form.submit "Reset password", class: "btn btn-lg btn-primary btn-block" %>

          <div class="line line-dashed"></div>
          <p class="text-muted text-center">
            <%= link_to "Sign In", new_user_session_path %> |
            <%= link_to "Sign Up", new_user_registration_path %>
          </p>

        </form>
      <% end %>
      
    </section>

  </div><!-- .container -->
</section>